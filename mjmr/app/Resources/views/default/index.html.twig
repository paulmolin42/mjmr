        <div class="wrapper">
            <div class="home">

                <div class="container">
                    <div id="countdown" class="row">
                        <div class="three columns">
                            <span class="days">107</span>
                            <div class="smalltext">Jours</div>
                        </div>
                        <div class="three columns">
                            <span class="hours">19</span>
                            <div class="smalltext">Heures</div>
